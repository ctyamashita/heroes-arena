<div class="bg-show">
  <div class="container col-12 col-sm-12 col-md-8 col-lg-6 col-xl-6 h-100 d-flex justify-content-between flex-column">
    <div class="py-3 mb-3 show-title">
      <div class="d-flex align-items-center px-3 py-2" style="background-color: <%= @creature.color %>">
        <img src="<%= @creature.class_img %>" alt="" class="icon-class-lg me-3">
        <h1 class='m-0'><strong><%= @creature.name %></strong></h1>
      </div>
      <p class='px-4 py-2 text-end m-0'><small><%= @creature.hero_class %>  - Lvl. <%= @creature.lvl %></small></p>
      <hr class='mt-1 mb-2'>
      <p class='m-0 px-3'>HP: <%= @creature.hp %>/<%= @creature.max_hp %></p>
      <div class='w-100 px-3'>
        <span class="emoji"><%= @hp.slice(0..4) %></span>
        <% (@creature.max_hp/5).times do |i|%>
          <% i = i * 5 %>
          <span class="emoji"><%= @hp.slice(i-4..i) %></span>
        <% end %>
      </div>

      <hr class='mt-1 mb-2'>
      <p class='m-0 px-3'>exp: <%= @creature.exp %>/100</p>
      <span class="emoji px-3"><%= @exp %></span>
    </div>
    <div style="background: url('<%= @creature.default_image %>'); height: 500px; background-size: contain; background-repeat: no-repeat; background-position: right">
      <div class="d-flex justify-content-start stats-display-container">
        <div class="stats-display m-0">
          <p class='m-0 px-2 py-1'>Stats</p>
          <p class='m-0 px-2 py-1'><span class="emoji">🗡️</span> ATK</p>
          <p class='m-0 px-2 py-1'><span class="emoji">🛡️</span> DEF</p>
          <p class='m-0 px-2 py-1'><span class="emoji">🏃</span> SPD</p>
          <p class='m-0 px-2 py-1'><span class="emoji">🎯</span> DEX</p>
          <p class='m-0 px-2 py-1'><span class="emoji">🧘</span> INT</p>
          <p class='m-0 px-2 py-1'><span class="emoji">🎲</span> LUK</p>
        </div>

        <div class="text-center stats-display m-0">
          <p class='m-0 px-2 py-1'>_</p>
          <p class='m-0 px-2 py-1'><%= @creature.atk %></p>
          <p class='m-0 px-2 py-1'><%= @creature.def %></p>
          <p class='m-0 px-2 py-1'><%= @creature.spd %></p>
          <p class='m-0 px-2 py-1'><%= @creature.dex %></p>
          <p class='m-0 px-2 py-1'><%= @creature.int %></p>
          <p class='m-0 px-2 py-1'><%= @creature.luk %></p>
        </div>
      </div>
    </div>
    <%= link_to creatures_path do %>
      <div class='stat-btn-lg mb-3 w-50'>
        < back
      </div>
    <% end %>
  </div>
</div>
